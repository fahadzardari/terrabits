---
import HeroArt from "../../assets/video-animation.png";
import CommonButton from "../common/CommonButton.astro";
import Image from "astro/components/Image.astro";
---

<section
    class="hero-section relative min-h-[80vh] overflow-hidden bg-[#4B00A3] pt-20 text-white md:min-h-screen lg:ml-[65px] lg:rounded-l-3xl lg:pt-0 xl:ml-[88px]"
>
    <div
        class="flex h-full min-h-[80vh] flex-col md:min-h-screen lg:flex-row lg:items-end lg:justify-between lg:pl-8 2xl:pl-12"
    >
        <!-- Left -->
        <div
            class="3xl:w-[50%] z-10 w-full px-6 lg:mt-auto lg:w-[90%] lg:pb-12 xl:w-[80%] 2xl:w-[65%] 2xl:pb-24"
        >
            <!-- <span class="mb-4 block h-[2px] w-10 bg-white"></span> -->
            <h1
                class="3xl:text-[86px] 3xl:leading-[100px] mb-2 text-[32px] font-bold capitalize md:text-[42px] lg:mb-4 lg:text-[56px] lg:leading-[60px] xl:text-[66px] xl:leading-[70px] 2xl:text-[76px] 2xl:leading-[85px]"
            >
                <span class="font-bold"
                    >Where creativity, story telling, & cinematography come
                    together.</span
                >
            </h1>
            <p
                class="mb-4 text-sm font-medium tracking-[1px] lg:mb-8 lg:text-base xl:text-xl 2xl:text-xl 2xl:leading-6"
            >
                Unleash the creative, narrative, and cinematographic potential
                with our assistance in video animation. Watch the craftsmanship
                come to life as your ideas are authentically and captivatingly
                brought to life, drawing your audience into an unforgettable
                experience.
            </p>
            <div class="flex items-center space-x-4">
                <CommonButton
                    className="chat-cta text-xs font-semibold md:text-sm lg:text-lg"
                >
                    Lets Talk
                </CommonButton>
            </div>
        </div>

        <!-- Right -->
        <div
            class="absolute top-8 right-0 bottom-0 z-0 w-[300%] object-cover lg:top-0 lg:right-0 lg:bottom-0 lg:w-[140%] xl:w-[120%] 2xl:w-full"
        >
            <Image
                id="hand-tilt"
                src={HeroArt}
                alt="Hand Image"
                class="w-full cursor-pointer"
            />
        </div>
    </div>
</section>

<script>
    // import { gsap, ScrollTrigger } from "../../utils/gsapUtils.js";

    document.addEventListener("DOMContentLoaded", () => {
        // Hand tilt effect (keep your existing code)
        const hand = document.getElementById("hand-tilt");
        if (hand) {
            hand.style.transition = "transform 0.3s";
            hand.addEventListener("mouseenter", () => {
                hand.style.transform = "scale(1.08)";
            });
            hand.addEventListener("mousemove", (e) => {
                const rect = hand.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = ((y - centerY) / centerY) * 18;
                const rotateY = ((x - centerX) / centerX) * 18;
                hand.style.transform = `scale(1.08) rotateX(${-rotateX}deg) rotateY(${rotateY}deg)`;
            });
            hand.addEventListener("mouseleave", () => {
                hand.style.transition = "transform 0.5s";
                hand.style.transform = "scale(1) rotateX(0deg) rotateY(0deg)";
                setTimeout(() => {
                    hand.style.transition = "transform 0.3s";
                }, 500);
            });
        }

