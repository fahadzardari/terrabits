---
import { Image } from "astro:assets";

interface Props {
    title?: string;
    heading?: string;
    images?: any[];
}
const {
    title = "Packaging",
    heading = "Visual Strategy",
    images = [],
} = Astro.props;
---

<div class={`internal-padding gap-y-4 py-12`}>
    <span class="text-lg font-semibold text-[#643DB4] md:text-xl">
        {title}
    </span>
    <h1
        class="text-5xl font-semibold text-black md:text-4xl md:leading-tight lg:text-5xl xl:text-6xl 2xl:text-[68px]"
    >
        {heading}
    </h1>

    <div class="mt-4 grid grid-cols-1 gap-4 lg:grid-cols-2">
        <Image
            src={images[0]}
            alt="Visual Strategy Image 1"
            class="w-full rounded-2xl object-cover drop-shadow-lg lg:row-span-2"
        />
        <Image
            src={images[1]}
            alt="Visual Strategy Image 2"
            class="h-full w-full rounded-2xl object-cover drop-shadow-lg"
        />
        <Image
            src={images[2]}
            alt="Visual Strategy Image 3"
            class="h-full w-full rounded-2xl object-cover drop-shadow-lg"
        />
    </div>
</div>
