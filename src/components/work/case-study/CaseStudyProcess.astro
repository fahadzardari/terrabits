---
interface ProcessStep {
    number: number;
    title: string;
    description: string;
}

interface Props {
    heading: string;
    steps: ProcessStep[];
}

const { heading, steps } = Astro.props;
---

<div class="internal-padding py-8 lg:py-16">
    <h2
        class="mb-12 text-center text-5xl font-semibold text-black md:text-4xl md:leading-tight lg:mb-24 lg:text-5xl xl:text-6xl 2xl:text-[68px]"
    >
        {heading}
    </h2>

    <div class="relative w-full">
        <!-- Timeline line - positioned through the middle of circles -->
        <div
            class="absolute top-2/5 right-0 left-0 hidden h-px bg-black lg:block"
            style=""
        >
        </div>

        <!-- Steps grid -->
        <div
            class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4 lg:gap-0"
        >
            {
                steps.map((step, index) => (
                    <div class="relative flex flex-col items-center text-center">
                        <div class="relative z-10 mb-8 lg:mb-0">
                            <div class="relative flex h-16 w-16 items-center justify-center rounded-full border-4 border-gray-400 bg-white transition-all duration-300 hover:border-blue-600">
                                <span class="text-lg font-bold text-gray-700">
                                    {step.number}
                                </span>
                            </div>
                        </div>

                        <div class="lg:mt-12">
                            <h3 class="mb-3 text-lg font-bold text-gray-900 lg:text-xl">
                                {step.title}
                            </h3>
                            <p class="max-w-xs text-sm leading-relaxed text-gray-600 lg:text-base">
                                {step.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    @media (max-width: 1024px) {
        /* Responsive adjustments for tablet and mobile */
        div:has(> .grid) {
            position: relative;
        }
    }
</style>
