---
interface Props {
    title?: string;
    heading?: string;
    paragraph?: string;
    subheading?: string;
    logoImage?: any;
    featuresList?: string[];
}
import { Image } from "astro:assets";
import GreenNestLogo from "../../../assets/work/green-nest-logo.png";
const {
    title = "Logo Anatomy",
    heading = "The Concept",
    subheading = "Constructed from Nature",
    paragraph = "The logo symbol combines the protective shape of a nest with the sprouting energy of a leaf. The circular motion implies the cycle of reuse and sustainability.",
    logoImage = GreenNestLogo,
    featuresList = [
        "Geometric Precision (Golden Ratio)",
        "Minimalist Line Weight",
        "Scalable for Small Print",
    ],
} = Astro.props;
---

<div class="internal-padding bg-[#F0F2FF] py-12 lg:py-20">
    <span
        class="mb-4 text-lg font-semibold text-[#643DB4] capitalize md:text-xl"
    >
        {title}
    </span>
    <h1
        class="text-5xl font-semibold text-black md:text-4xl md:leading-tight lg:text-5xl xl:text-6xl 2xl:text-[68px]"
    >
        {heading}
    </h1>

    <div
        class="mt-8 flex flex-col gap-y-4 rounded-2xl bg-white px-4 py-8 drop-shadow-lg md:flex-row md:justify-between md:gap-x-4 lg:px-8 lg:py-12"
    >
        <div class="flex flex-col gap-6 md:w-3/5">
            <h2 class="text-2xl font-semibold md:text-2xl lg:text-4xl">
                {subheading}
            </h2>
            <p class="text-sm text-[#535353] md:text-lg">
                {paragraph}
            </p>

            <ul class="">
                {
                    featuresList.map((feature) => (
                        <li class="my-4 flex gap-x-3">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 20 20"
                                fill="none"
                                class="aspect-square w-5"
                            >
                                <path
                                    d="M8.6 14.6L15.65 7.55L14.25 6.15L8.6 11.8L5.75 8.95L4.35 10.35L8.6 14.6ZM10 20C8.61667 20 7.31667 19.7375 6.1 19.2125C4.88333 18.6875 3.825 17.975 2.925 17.075C2.025 16.175 1.3125 15.1167 0.7875 13.9C0.2625 12.6833 0 11.3833 0 10C0 8.61667 0.2625 7.31667 0.7875 6.1C1.3125 4.88333 2.025 3.825 2.925 2.925C3.825 2.025 4.88333 1.3125 6.1 0.7875C7.31667 0.2625 8.61667 0 10 0C11.3833 0 12.6833 0.2625 13.9 0.7875C15.1167 1.3125 16.175 2.025 17.075 2.925C17.975 3.825 18.6875 4.88333 19.2125 6.1C19.7375 7.31667 20 8.61667 20 10C20 11.3833 19.7375 12.6833 19.2125 13.9C18.6875 15.1167 17.975 16.175 17.075 17.075C16.175 17.975 15.1167 18.6875 13.9 19.2125C12.6833 19.7375 11.3833 20 10 20Z"
                                    fill="#643DB4"
                                />
                            </svg>
                            <span
                                set:html={feature}
                                class="flex-1 text-sm font-medium text-black md:text-base"
                            />
                        </li>
                    ))
                }
            </ul>
        </div>

        <div class="rounded-lg border-12 border-[#F0F2FF] p-8 md:w-2/5 lg:p-12">
            <Image
                src={logoImage}
                alt="Logo"
                class="h-auto w-full object-contain"
            />
        </div>
    </div>
</div>
