---
import Layout from "../../layouts/Layout.astro";
import CaseStudyHeader from "../../components/work/case-study/CaseStudyHeader.astro";
import CaseStudyIntro from "../../components/work/case-study/CaseStudyIntro.astro";
import CoverBrewYouCoffeeWebsite from "../../assets/work/brew-you-coffee/cover-website.png";
import DesignApproach from "../../components/work/case-study/DesignApproach.astro";
import CaseStudyProcess from "../../components/work/case-study/CaseStudyProcess.astro";

import RewardIcon from "../../assets/icons/reward-icon.svg";
import RecycleIcon from "../../assets/icons/recycle-icon.svg";
import EyeIcon from "../../assets/icons/eye-icon.svg";
import DebbyCard from "../../components/work/case-study/DebbyCard.astro";
import ImageOne from "../../assets/work/brew-you-coffee/menu.png";

import CaseStudyChallenge from "../../components/work/case-study/CaseStudyChallenge.astro";
import Image from "astro/components/Image.astro";
---

<Layout title="Brew You Coffee Website - Case Study  - Terrabits">
    <div class="our-services h-20"></div>
    <CaseStudyHeader
        title="Brew You Coffee"
        tags={["Web Design", "Development"]}
        image={CoverBrewYouCoffeeWebsite}
        url="/case-studies/brew-you-coffee-website"
        subtitle="A Sensory Digital Experience"
    />

    <CaseStudyIntro
        title="Client Overview:"
        heading="More Than Just Coffee"
        paragraph="Brew You Coffee Co. represents the intersection of artisanal coffee and modern wellness. They came to us with a clear problem: their product was premium, but their digital presence felt generic. The goal was to create a narrative-driven digital presence that emphasizes their unique brewing.<br><br> Process and health benefits without sacrificing the fun, energetic vibe of the brand."
    />

    <CaseStudyChallenge
        title="The Challenge"
        heading="Translating Taste to Screen"
        paragraph="How do you sell the taste of coffee through a screen? The challenge was twofold: reaching a Gen Z and Millennial audience who are bombarded with content, and explaining complex nutritional benefits without 'heavy' medical- style designs. We needed to avoid the typical minimalist coffee shop aesthetic and instead create something that felt like a streetwear drop- hype-worthy and visually delicious."
    />

    <DesignApproach
        title="Design Approach"
        heading="A Visual-First Approach"
        cards={[
            {
                title: "Crave-worthy Hero",
                paragraph:
                    "We ditched static headers for high-bitrate video loops of pouring espresso and melting ice, triggering immediate sensory engagement.",
                icon: EyeIcon,
            },
            {
                title: "Dynamic Hero Layout",
                paragraph:
                    "Balancing legibility with vibe. We paired clean sans-serifs for data with bold, bubble-style headers to inject personality.",
                icon: RecycleIcon,
            },
            {
                title: "Clean Typography",
                paragraph:
                    "A custom 3-column interactive module that educates users on bean origins, roast levels, and flavor profiles without overwhelming text.",
                icon: RewardIcon,
            },
        ]}
    />

    <div
        class="internal-padding flex flex-col gap-y-8 py-12 md:flex-row md:justify-between"
    >
        <div class="flex flex-col gap-y-4 md:w-1/2">
            <h1
                class="mb-4 text-5xl font-semibold text-black md:text-4xl md:leading-tight lg:text-5xl xl:text-6xl 2xl:text-[68px]"
            >
                Smart Menu & Dark Mode
            </h1>

            <p class="text-sm leading-8 text-[#535353] capitalize lg:text-lg">
                The site adapts to the user's environment. A toggle allows users
                to switch between "Morning Brew" (Light) and "Late Night
                Espresso" (Dark) modes. The menu system was re-engineered to be
                thumb- friendly, reducing friction on mobile devices.
            </p>
            <ul class="">
                <li class="my-4 flex gap-x-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 20 20"
                        fill="none"
                        class="aspect-square w-5"
                    >
                        <path
                            d="M8.6 14.6L15.65 7.55L14.25 6.15L8.6 11.8L5.75 8.95L4.35 10.35L8.6 14.6ZM10 20C8.61667 20 7.31667 19.7375 6.1 19.2125C4.88333 18.6875 3.825 17.975 2.925 17.075C2.025 16.175 1.3125 15.1167 0.7875 13.9C0.2625 12.6833 0 11.3833 0 10C0 8.61667 0.2625 7.31667 0.7875 6.1C1.3125 4.88333 2.025 3.825 2.925 2.925C3.825 2.025 4.88333 1.3125 6.1 0.7875C7.31667 0.2625 8.61667 0 10 0C11.3833 0 12.6833 0.2625 13.9 0.7875C15.1167 1.3125 16.175 2.025 17.075 2.925C17.975 3.825 18.6875 4.88333 19.2125 6.1C19.7375 7.31667 20 8.61667 20 10C20 11.3833 19.7375 12.6833 19.2125 13.9C18.6875 15.1167 17.975 16.175 17.075 17.075C16.175 17.975 15.1167 18.6875 13.9 19.2125C12.6833 19.7375 11.3833 20 10 20Z"
                            fill="#643DB4"></path>
                    </svg>
                    <span
                        class="flex-1 text-sm font-medium text-black md:text-base"
                    >
                        Custom linear iconography designed specifically for the
                        brewing methods.
                    </span>
                </li>
                <li class="my-4 flex gap-x-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 20 20"
                        fill="none"
                        class="aspect-square w-5"
                    >
                        <path
                            d="M8.6 14.6L15.65 7.55L14.25 6.15L8.6 11.8L5.75 8.95L4.35 10.35L8.6 14.6ZM10 20C8.61667 20 7.31667 19.7375 6.1 19.2125C4.88333 18.6875 3.825 17.975 2.925 17.075C2.025 16.175 1.3125 15.1167 0.7875 13.9C0.2625 12.6833 0 11.3833 0 10C0 8.61667 0.2625 7.31667 0.7875 6.1C1.3125 4.88333 2.025 3.825 2.925 2.925C3.825 2.025 4.88333 1.3125 6.1 0.7875C7.31667 0.2625 8.61667 0 10 0C11.3833 0 12.6833 0.2625 13.9 0.7875C15.1167 1.3125 16.175 2.025 17.075 2.925C17.975 3.825 18.6875 4.88333 19.2125 6.1C19.7375 7.31667 20 8.61667 20 10C20 11.3833 19.7375 12.6833 19.2125 13.9C18.6875 15.1167 17.975 16.175 17.075 17.075C16.175 17.975 15.1167 18.6875 13.9 19.2125C12.6833 19.7375 11.3833 20 10 20Z"
                            fill="#643DB4"></path>
                    </svg>
                    <span
                        class="flex-1 text-sm font-medium text-black md:text-base"
                    >
                        Seamless Instagram integration pulling the latest
                        user-generated content.
                    </span>
                </li>
            </ul>
        </div>

        <Image
            src={ImageOne}
            alt="Brew You Coffee Website Design Showcase"
            class="rounded-lg md:w-1/2"
        />
    </div>

    <div class="internal-padding flex flex-col items-center py-8">
        <span class="mb-2 text-lg font-semibold text-[#643DB4] md:text-xl">
            The Impact
        </span>
        <h1
            class="mb-4 text-center text-5xl font-semibold text-black md:text-4xl md:leading-tight lg:text-5xl xl:text-6xl 2xl:text-[68px]"
        >
            A Website That Converts
        </h1>
        <div class="flex flex-col gap-4 md:flex-row">
            <article class="p-4 py-4 text-center">
                <h2
                    class="text-[50px] font-semibold text-[#643DB4] md:text-[60px] lg:text-[70px] 2xl:text-[82px]"
                >
                    2.5m+
                </h2>
                <h3
                    class="mb-2 text-lg font-semibold text-black capitalize lg:text-xl xl:text-2xl"
                >
                    Engagement Increase
                </h3>
                <p class="text-sm text-black capitalize lg:text-base">
                    Measured across social shares and site time.
                </p>
            </article>
            <article
                class="border-x-0 p-4 py-4 text-center md:border-x-2 md:border-x-[#643DB4]"
            >
                <h2
                    class="text-[50px] font-semibold text-[#643DB4] md:text-[60px] lg:text-[70px] 2xl:text-[82px]"
                >
                    40%
                </h2>
                <h3
                    class="mb-2 text-lg font-semibold text-black capitalize lg:text-xl xl:text-2xl"
                >
                    Reduction in Calls
                </h3>
                <p class="text-sm text-black capitalize lg:text-base">
                    Clearer menu UI solved common FAQs.
                </p>
            </article>

            <article class="p-4 py-4 text-center">
                <h2
                    class="text-[50px] font-semibold text-[#643DB4] md:text-[60px] lg:text-[70px] 2xl:text-[82px]"
                >
                    100%
                </h2>
                <h3
                    class="mb-2 text-lg font-semibold text-black capitalize lg:text-xl xl:text-2xl"
                >
                    Retro-Cool Vibes
                </h3>
                <p class="text-sm text-black capitalize lg:text-base">
                    Client praise for the aesthetic alignment.
                </p>
            </article>
        </div>
    </div>

    <CaseStudyProcess
        heading="From Discovery To Launch"
        steps={[
            {
                number: 1,
                title: "Discovery",
                description: "Brand audit and user persona definition.",
            },
            {
                number: 2,
                title: "Wireframing",
                description: "Mapping the booking flow and content structure.",
            },
            {
                number: 3,
                title: "Design",
                description: 'Applying the "Pink Power" visual identity.',
            },
            {
                number: 4,
                title: "Launch",
                description: "Deployment and social media integration.",
            },
        ]}
    />
</Layout>
