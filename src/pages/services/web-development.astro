import Portfolio from "../../components/home/Portfolio.astro";
import Accordion from "../../components/common/Accordion.astro";
import SwiperSection from "../../components/common/SwiperSection.astro";
import { webDevSwiperCards } from "../../data/swipers";
import VerticalSwiper from "../../components/common/VerticalSwiper.astro";
import Testimonials from "../../components/common/Testimonials.astro";
import Acc1 from "../../assets/web-dev/accordion/1.1.png";
import Acc2 from "../../assets/web-dev/accordion/1.2.png";
